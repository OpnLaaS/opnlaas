{
    "name": "opnlaas",
    "version": "0.0.1",
    "description": "OpnLaaS Frontend",
    "type": "module",
    "dependencies": {
        "@tailwindcss/cli": "^4.1.13",
        "npm-run-all": "^4.1.5",
        "terser-webpack-plugin": "^5.3.14",
        "webpack": "^5.103.0",
        "webpack-cli": "^6.0.1"
    },
    "scripts": {
        "devel": "npm-run-all --parallel tailwind:watch webpack:watch",
        "tailwind:watch": "npx @tailwindcss/cli -i ./public/styles/main.css -o ./public/static/dist/styles/main.css --watch",
        "webpack:watch": "npx webpack --watch",

        "build": "npx @tailwindcss/cli -i ./public/styles/main.css -o ./public/static/dist/styles/main.css --minify; npx webpack"
    },
    "devDependencies": {
        "tailwindcss": "^4.1.16"
    }
}
